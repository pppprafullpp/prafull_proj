<table cellpadding='0' cellspacing='0' class='tabbed' height='100%' width='100%' >
  <tr> 
    <td class='main' id='main' valign='top'>
      <div class='title_tools'>
		<%= link_to "View All Cellphones", cellphone_details_path %>
      </div>
      <div class='title'>
        <span id='title'>Add a New Cellphone</span>
      </div>

			<div class="small-6 large-centered columns">
				<%= form_for(@cellphone_detail, :url => @cellphone_details) do |f| %>
					<br/>
					<% if @cellphone_detail.errors.any? %>
  					<div id="error_explanation">
    					<div class="alert alert-danger">
      					The form contains <%= pluralize(@cellphone_detail.errors.count, "error") %>.
    					</div>
    					<ul>
    						<% @cellphone_detail.errors.full_messages.each do |msg| %>
      						<li><%= msg %></li>
    						<% end %>
    					</ul>
  					</div>
					<% end %>
				  <br/>
						<div><span style="color:#4285F4"><strong><i>Fields marked * are mandatory</i></strong></span></div><br/>
					<div><strong>Cellphone Name: </strong><br />
				  <%= f.text_field :cellphone_name %></div>
				  <div><strong>Brand: </strong><br />
				  <%= f.text_field :brand %></div>
				  <div><strong>Description:</strong><br />
				  <%= f.text_field :description %></div>
				  <div><%= f.check_box :status %><strong>Status</strong></div>
				  <div><%= f.submit "Create" %></div>
				<% end %>
			</div>
    </td>
	</tr>
</table>


