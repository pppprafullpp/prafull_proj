<table cellpadding='0' cellspacing='0' class='tabbed' height='100%' width='100%' >
  <tr> 
    <td class='main' id='main' valign='top'>
      <div class='title_tools'>
				<%= link_to "View All Deals", deals_path %>
      </div>
      <div class='title'>
        <span id='title'>Add a New Deal</span>
      </div>

			<div class="small-6 large-centered columns">
				<%= form_for(@deal, :url => @deals) do |f| %>
				  <br/>
				  <div><strong>Service Category: </strong><br />
				  <%= f.select :service_category_id, ServiceCategory.all.map { |r| [r.name, r.id]},{:include_blank => "Select Category"},:onchange=>"populate_service_provider(this);" %>
				  </div>
				  <div><strong>Service Provider: </strong><br />
				  <%= f.select :service_provider_id, [],{:include_blank => "Select Provider"} %>
				  </div>
				  <div><strong>Title:</strong><br />
				  <%= f.text_field :title %></div>
				  <div><strong>Deal Image:</strong><br/>
				  <%= f.file_field :image %></div>
				  <%= f.hidden_field :image_cache %>
				  <div><strong>State:</strong><br />
				  <%= f.text_field :state %></div>
				  <div><strong>City:</strong><br />
				  <%= f.text_field :city %></div>
				  <div><strong>Zip:</strong><br />
				  <%= f.text_field :zip %></div>
				  <div><strong>Price: </strong><br />
				  <%= f.text_field :price %></div>
				  <div><strong>URL:</strong><br />
				  <%= f.text_field :url %></div>
				  <div><strong>Enter a Short Description: </strong><br />
				  <%= f.text_area :short_description %></div>
				  <div><strong>Enter Detail Description: </strong><br />
				  <%= f.text_area :detail_description %></div>
				  <div><strong>You Save Text:</strong><br />
				  <%= f.text_field :you_save_text %></div>
				  <div><strong>Start Date:</strong><br />
				  <%= f.text_field :start_date %></div>
				  <div><strong>End Date:</strong><br />
				  <%= f.text_field :end_date %></div>
				  <div><%= f.check_box :is_active %> <strong>Is Active ? </strong></div>
				  <div><%= f.submit "Create" %></div>
				<% end %>
			</div>
    </td>
	</tr>
</table>

