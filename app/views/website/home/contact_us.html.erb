<section class="contact-us-banner">
  <div class="container text-center">
    <h3>Contact Us</h3>
  </div>
</section>

<section class="contactus-section">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <div class="form-contact">
          <p>Please be patient while waiting for response. (24/7 Support!)&nbsp; <br><strong>Inquiries: 972-992-4200</strong></p>
          <h4>SEND US A <strong> MESSAGE! </strong></h4>
          <form method="post" action="<%= contact_us_website_app_users_path %>" id="contact_us_form">
            <div class="col-md-6 pd-r20">
              <label>Name<span id="mandat">*</span></label>
              <input class="form-control" type="text" id="name" name="name" maxlength="50" required>
            </div>
            <div class="col-md-6">
              <label>Email<span id="mandat">*</span></label>
              <input class="form-control" type="email" id="contact_email" name="email" maxlength="50">
               
            </div>
            <div class="col-md-12">
              <label>Subject<span id="mandat">*</label>
              <input class="form-control" type="text" id="name" name="subject" maxlength="50" required>
            </div>
            <div class="col-md-12">
              <label>Message<span id="mandat">*</label>
              <textarea class="form-control" id="message" name="message" rows="4" maxlength="1000" required></textarea>
            </div>
            <div class="col-md-12">
              <button class="btn send-btn" type="submit" form="contact_us_form" value="Submit">Send message</button>
            </div>
          </form>
        </div>
      </div>
      <div class="col-md-6 address-contact">
        <h4>FIND THE <strong> ADDRESS </strong></h4>
        <div class="address-info">

          <ul>
            <li class="company-name"><strong>ServiceDealz</strong></li>
            <li><i class="fa fa-map-marker icon-large"></i> 7708 Mapleridge Drive, Plano, Texas 75024, United States</li>

            <li><i class="fa fa-phone"></i> + 972-992-4200</li>
            <li><i class="fa fa-envelope"></i> <a class="webmail" href="mailto:mail@companyname.com">sales@servicedealz.com</a></li>
            <li><i class="fa fa-globe"></i> <a class="webmail" href="<%= website_home_index_path %>">www.servicedealz.com</a></li>
          </ul>

        </div>

        <div class="google-map">
          <h4>FIND THE <strong> ADDRESS </strong></h4>
          <div class="map-sty">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3343.017812680496!2d-96.78835968481631!3d33.0823159808808!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x864c3d2eda0e3219%3A0x138c385344fdbf83!2s7708+Mapleridge+Dr%2C+Plano%2C+TX+75024%2C+USA!5e0!3m2!1sen!2sin!4v1469088202947" frameborder="0" style="border:0" allowfullscreen=""></iframe>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<script type="text/javascript">


    $( "#contact_email").focusout(function() {
      email = $("#contact_email").val();
      if (!ValidateEmail($("#contact_email").val())) {
           $("#contact_email_error").show();

        }
        else
        {
          $("#contact_email_error").hide();
        }
    });


     function ValidateEmail(email) {
        var expr = /^([\w-\.]+)@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.)|(([\w-]+\.)+))([a-zA-Z]{2,4}|[0-9]{1,3})(\]?)$/;
        return expr.test(email);
    };


</script>
