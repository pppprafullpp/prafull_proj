<table cellpadding='0' cellspacing='0' class='tabbed' height='100%' width='100%' >
  <tr> 
    <td class='main' id='main' valign='top'>

      <div class='title_tools'>
				<% if current_user.is_at_admin_level? %><%= link_to "View All ExtraServices", extra_services_path %><% end %>
      </div>
      <div class='title'>
        <span id='title'>Update ExtraService</span>
      </div>
			<div class="small-6 large-centered columns">
				<%= form_for(@extra_service) do |f| %><br/>
				<div><strong>Service Name: </strong><br />
				  <%= f.text_field :service_name %></div>
				  <div><strong>Select a Service Category :</strong><br />
				  	<%= f.select :service_category_id, ServiceCategory.all.map { |r| [r.name, r.id]}, {:include_blank => "Select a service category"}%>
				  </div>
				  <div><strong>Service Description:</strong><br />
				  <%= f.text_field :service_description %></div>
				  <div><%= f.check_box :status %><strong>Status</strong></div>
				  <div><%= f.submit "Update" %></div>
				<% end %>
			</div>
    </td>
	</tr>
</table>
