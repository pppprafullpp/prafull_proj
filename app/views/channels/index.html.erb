<p id="notice"><%= notice %></p>

<table cellpadding='0' cellspacing='0' class='tabbed' height='100%' width='100%'>
  <tr>
    <td class='main' id='main' valign='top'>
      <div class='title_tools'>
        <% if current_user.is_super_admin? %>
            <%= link_to 'Add New Channel', new_channel_path %>
        <% end %>
      </div>

      <div class='title'>
        <span id='title'>Channels</span>
      </div>

      <table id="service_deals_list" class="datatable" cellpadding='0' cellspacing='0' border='1'>
        <thead>
        <tr>
          <th>Category</th>
          <th>Name</th>
          <th>Code</th>
          <th>Type</th>
          <th>IS HD</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        <div class="digg_pagination">
          <%= will_paginate @channels %>
        </div>
        <% @channels.each do |channel| %>
            <tr>
              <td class="best_in"><%= channel.category_name %></td>
              <td class="best_in"><%= channel.channel_name %></td>
              <td><%= channel.channel_code %></td>
              <td><%= channel.channel_type %></td>
              <td><%= channel.is_hd %></td>
              <td><%= channel.status %></td>
              <td>
                <%= link_to 'Show', channel %> |
                <%= link_to 'Edit', edit_channel_path(channel) %> |
                <%= link_to 'Delete', channel, method: :delete, data: { confirm: 'Are you sure?' } %>
              </td>
            </tr>
        <% end %>

        </tbody>
      </table>
  
    </td>
  </tr>
</table>


