                                    &nbsp;&nbsp;Domestic Call Minutes        : <%= @d_call_mins %> <br/> 
                                  <% end %>
                                  <% if @i_call_mins.present? %>
                                    &nbsp;&nbsp;International Call Minutes   : <%= @i_call_mins %> <br/>
                                  <% end %>  
                                  &nbsp;&nbsp;Price                        : <%= @t_price %>
                                </td>
                              </tr>
                            <% end %>
                            <% if @cable_t_deal.present? %>
                              <tr>
                                <td>
                                  <b><i>Cable Trending Deal</i></b> <br/>
                                  &nbsp;&nbsp;Deal Title       : <%= @c_title %> <br/>
                                  &nbsp;&nbsp;Vendor           : <%= @c_provider %> <br/>
                                  <% if @f_channels.present? %>
                                    &nbsp;&nbsp;Free Channels    : <%= @f_channels %> <br/>
                                  <% end %>
                                  <% if @p_channels.present? %>  
                                    &nbsp;&nbsp;Premium Channels : <%= @p_channels %> <br/>
                                  <% end %>  
                                  &nbsp;&nbsp;Price            : <%= @c_price %>
                                </td>
                              </tr>
                            <% end %>
                            <% if @cell_t_deal.present? %>
                              <tr>
                                <td>
                                  <b><i>Cell Phone Trending Deal</i></b> <br/>
                                  &nbsp;&nbsp;Deal Title       : <%= @cell_title %> <br/>
                                  &nbsp;Vendor           : <%= @cell_provider %> <br/>
                                  <% if @d_call_mins.present? %>
                                    &nbsp;&nbsp;Domestic Call Minutes        : <%= @d_call_mins %> <br/> 
                                  <% end %>
                                  <% if @i_call_mins.present? %>
                                    &nbsp;&nbsp;International Call Minutes   : <%= @i_call_mins %> <br/>
                                  <% end %>  
                                  <% if @data_plan.present? %>
                                    &nbsp;&nbsp;Data(In GB)    : <%= @data_plan %> <br/>
                                  <% end %>
                                  <% if @data_speed.present? %>  
                                    &nbsp;&nbsp;Speed(In Mbps) : <%= @data_speed %> <br/>
                                  <% end %>  
                                  &nbsp;&nbsp;Price            : <%= @cell_price %>
                                </td>
                              </tr>
                            <% end %>
                          </table> 
                        </p>
                        <p style="font-size:14px; color:#666666; line-height:22px;">ServiceDeals can help you find deals that can save you 20%-30% or more. Here are best match and trending deals:</p>
