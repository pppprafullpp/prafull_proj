<table cellpadding='0' cellspacing='0' class='tabbed' height='100%' width='100%'>
  <tr> 
    <td class='main' id='main' valign='top'>
      <div class='title_tools'>
	    	<% if current_user.is_super_admin? %>
		  		<%= link_to "Create New", new_bulk_notification_path %>
				<% end %>
      </div>

      <div class='title'>
        <span id='title'><%= image_tag("services.png")%> Bulk Notifications</span>
      </div>

      <div id="service_category" class="list">
	    	<table id="push_notification_list" class="datatable" cellpadding='0' cellspacing='0' border='1'>
		  		<thead>
		    		<tr>
		      		<th><strong>ID</strong></th>
		      		<th><strong>Category</strong></th>
			  			<!--<th><strong>State </strong></th>
			  			<th><strong>City </strong></th>
			  			<th><strong>Zip </strong></th>-->
			  			<th><strong>Message </strong></th>
			  			<th><strong>Edit </strong></th>
						</tr>
		  		</thead>
		  		<tbody>
		  			<% @bulk_notifications.each do |b_notification| %>
			  			<% if can? :read, b_notification %>
			    			<tr>
			      			<td><%= b_notification.id %></td>
			      			<td><%= b_notification.category %></td>
				  				<!--<td><%#= b_notification.state %></td>
				  				<td><%#= b_notification.city %></td>
				  				<td><%#= b_notification.zip %></td>-->
				  				<td><%= b_notification.message %></td>
				  				<td><%= (link_to "Delete", b_notification, method: :delete, data: { confirm: "You sure?" }) if can? :manage, b_notification %></td>
				  				<!--<td><%#= (link_to 'Edit', edit_bulk_notification_path(b_notification)) if can? :manage, b_notification %> | <%#= (link_to "Delete", b_notification, method: :delete, data: { confirm: "You sure?" }) if can? :manage, b_notification %></td>-->
								</tr>
			  			<% end %>
						<% end %>
		  		</tbody>
				</table>
	  	</div>
    </td>
  </tr>
</table>