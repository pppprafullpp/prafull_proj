<table cellpadding='0' cellspacing='0' class='tabbed' height='100%' width='100%' >
  <tr> 
    <td class='main' id='main' valign='top'>

      <div class='title_tools'>
				<% if current_user.is_at_admin_level? %><%= link_to "View All", comment_ratings_path %><% end %>
      </div>
      <div class='title'>
        <span id='title'>Update</span>
      </div>
			<div class="small-6 large-centered columns">
				<%= form_for(@comment_rating) do |f| %>
					<br/>
				  <div><strong>App User Id:</strong><br />
				  <%= f.text_field :app_user_id, :readonly => true %></div>
				  <div><strong>Deal Id: </strong><br/>
				  <%= f.text_field :deal_id, :readonly => true %></div>
				  <div><strong>Rating:</strong><br />
				  <%= f.text_field :rating_point %></div>
				  <div><%= f.check_box :status %>
				  <strong>Show on page</strong><br /></div>
				  <div><strong>Comment Title:</strong><br />
				  <%= f.text_field :comment_title %></div>
				  <div><strong>Comment:</strong><br />
				  <%= f.text_field :comment_text %></div>
				  <div><%= f.submit "Update" %></div>
				<% end %>
			</div>
    </td>
	</tr>
</table>

