

<div class="row">
  <div class="col-lg-12">
    <h5 class="margin_bot20  hidden">More Information</h5>
    <table class="table table-bordered hidden">
      <thead>
      <tr class="active">
        <th colspan="4">Channels</th>
      </tr>
      </thead>
      <tbody>
      <tr>
        <td width="20%">General</td>
        <td width="80%" colspan="2"><%= @deal.try(:cable_deal_attributes).try(:first).try(:free_channels) %>
          <!-- <a href="#" data-toggle="modal" data-target="#myModal2">View More</a> --> </td>
      </tr>
      </tbody>
    </table>
    <% if @deal_equipments.present? %>
        <h5 class="margin_bot20">Equipment & Installation</h5>
        <% @deal_equipments.each do |deal_equipment| %>
            <table class="table table-bordered">
              <thead>
              <tr class="active">
                <th colspan="3"><%= deal_equipment.try(:name) %></th>
              </tr>
              </thead>
              <tbody>
                 <tr>
                <td width="20%">Price</td>
                <td width="80%" colspan="2">$<%= "%.2f" % deal_equipment.try(:price) %></td>
              </tr>
              <tr>
                <td width="20%">Installation</td>
                <td width="80%" colspan="2"><%= deal_equipment.try(:installation) %></td>
              </tr>
              </tbody>
            </table>
        <% end %>
    <% end %>

  </div>

</div>