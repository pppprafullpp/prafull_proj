<table cellpadding='0' cellspacing='0' class='tabbed' height='100%' width='100%' >
  <tr> 
    <td class='main' id='main' valign='top'>
      <div class='title_tools'>
		<%= link_to "View All Services", service_categories_path %>
      </div>
      <div class='title'>
        <span id='title'>Create a New Service Category</span>
      </div>

			<div class="small-6 large-centered columns">
				<%= form_for(@service_category, :url => @service_categories) do |f| %>
					<br/>
					<% if @service_category.errors.any? %>
  					<div id="error_explanation">
    					<div class="alert alert-danger">
      					The form contains <%= pluralize(@service_category.errors.count, "error") %>.
    					</div>
    					<ul>
    						<% @service_category.errors.full_messages.each do |msg| %>
      						<li><%= msg %></li>
    						<% end %>
    					</ul>
  					</div>
					<% end %>
					<br/>
					<div><span style="color:#4285F4"><strong><i>Fields marked * are mandatory</i></strong></span></div><br/>
				  <div>Service Category Name :<span id="mandat">*</span>  <br />
				  <%= f.text_field :name %></div>
				  <div>Description : <br />
				  <%= f.text_field :description %></div>
				  <div><%= f.submit "Create" %></div>
				<% end %>
			</div>
    </td>
	</tr>
</table>

