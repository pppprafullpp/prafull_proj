<table cellpadding='0' cellspacing='0' class='tabbed' height='100%' width='100%'>
  <tr> 
    <td class='main' id='main' valign='top'>
      <div class='title_tools'>
				<% if current_user.is_super_admin? %>
					<%= link_to "Add New Deal", new_deal_path %>
				<% end %>
      </div>

      <div class='title'>
        <span id='title'><%= image_tag("deals.png")%> Deals</span>
      </div>
      <div id="service_deals" class="list">
        <table id="service_deals_list" class="datatable" cellpadding='0' cellspacing='0' border='1'>
          <thead>
            <tr>
              <th><strong>Category</strong></th>
              <th><strong>URL</strong></th>
              <th><strong>Deal</strong></th>
              <th><strong>Edit</strong></th>
            </tr>
          </thead>
          <tbody>
            <% @deals.each do |s_deal| %>
              <% if can? :read, s_deal %>
                <tr>
                  <td><%= s_deal.category %></td>
                  <td><%= s_deal.company %></td>
                  <td><%= s_deal.deal %></td>
                  <td><%= (link_to 'Edit', edit_deal_path(s_deal)) if can? :manage, s_deal %></td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </td>
  </tr>
</table>      