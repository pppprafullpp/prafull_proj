<table cellpadding='0' cellspacing='0' class='tabbed' height='100%' width='100%' >
  <tr> 
    <td class='main' id='main' valign='top'>
      <div class='title_tools'>
				<%= link_to "View All Deals", service_deals_path %>
      </div>
      <div class='title'>
        <span id='title'>Add a New Deal</span>
      </div>

			<div class="small-6 large-centered columns">
				<%= form_for(@service_deal, :url => @service_deals) do |f| %>
					<br/>

				  <div><strong>Select a Service Category : </strong><br />
				  <%= f.select :category, {'Internet' => 'internet','Cable' => 'cable','Telephone' => 'telephone', 'Gas' => 'gas', 'Electricity' => 'electricity'} %></div>
				  <div><strong>Company:</strong><br />
				  <%= f.text_field :company %></div>
				  <div><strong>State:</strong><br />
				  <%= f.text_field :state %></div>
				  <div><strong>Zip Code:</strong><br />
				  <%= f.text_field :zip %></div>
				  <div><strong>Enter a deal</strong><br />
				  <%= f.text_area :deal %></div>
				  <div><%= f.submit "Create" %></div>
				<% end %>
			</div>
    </td>
	</tr>
</table>

