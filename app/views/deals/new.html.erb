<table cellpadding='0' cellspacing='0' class='tabbed' height='100%' width='100%' >
  <tr> 
    <td class='main' id='main' valign='top'>
      <div class='title_tools'>
				<%= link_to "View All Deals", deals_path %>
      </div>
      <div class='title'>
        <span id='title'>Add a New Deal</span>
      </div>

			<div class="small-6 large-centered columns">
				<%= form_for(@deal, :url => @deals) do |f| %>
					<br/>

				  <div><strong>Select a Service Category : </strong><br />
				  <%#= f.select :category, {'Internet' => 'internet','Cable' => 'cable','Telephone' => 'telephone', 'Gas' => 'gas', 'Electricity' => 'electricity'} %>
				  <%= f.select :category, ServiceCategory.uniq.pluck(:name).reject { |f| f.nil? || f.empty? },{:include_blank => "Select a service category"}%>
				  </div>
				  <div><strong>Title:</strong><br />
				  <%= f.text_field :title %></div>
				  <div><strong>Service Provider : </strong><br />
				  <%= f.text_field :service_provider %></div>
				  <div><strong>Price : </strong><br />
				  <%= f.text_field :price %></div>
				  <div><strong>URL:</strong><br />
				  <%= f.text_field :url %></div>
				  <div><strong>Enter a Short Description : </strong><br />
				  <%= f.text_area :short_description %></div>
				  <div><strong>Enter a Detail Description : </strong><br />
				  <%= f.text_area :deal %></div>
				  <div><%= f.submit "Create" %></div>
				<% end %>
			</div>
    </td>
	</tr>
</table>

