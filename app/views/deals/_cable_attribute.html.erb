<fieldset id="cable-attributes" style="display:none;">
  <h4>Cable/TV Deal Attributes</h4>
  <table class="form-data">
    <tr>
      <td>
      <div>Free channels<span class="mandat">*</span></div>
      <%= f.text_field :free_channels, :id=>'cable-free-channels' %>
      </td>
      <td>
      <%= f.label 'Free channels list (comma separated)' %>
      <%= f.text_field :free_channels_list %>
      </td>
    </tr>
    <tr>
      <td>
      <%= f.label :premium_channels %>
      <%= f.text_field :premium_channels %>
      </td>
      <td>
      <%= f.label 'Premium channels list (comma separated)' %>
      <%= f.text_field :premium_channels_list %>
      </td>
    </tr>
    <tr>
      <td>
      <%= f.label :hd_channels %>
      <%= f.text_field :hd_channels %>
      </td>
      <td>
      <%= f.label 'HD channels list (comma separated)' %>
      <%= f.text_field :hd_channels_list %>
      </td>
    </tr>
    <tr>
      <td colspan="2">
        <%= f.fields_for :cable_equipments do |builder| %>
          <%= render 'cable_equipment_fields', f: builder %>
        <% end %>
      </td>
    </tr>
    <tr>
     <!--  <p><td colspan="2"><%#= link_to_add_fields "Add Equipment", f, :cable_equipments %></td></p> -->
    </tr>
  </table>
</fieldset>