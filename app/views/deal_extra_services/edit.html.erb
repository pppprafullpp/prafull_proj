<table cellpadding='0' cellspacing='0' class='tabbed' height='100%' width='100%' >
  <tr> 
    <td class='main' id='main' valign='top'>

      <div class='title_tools'>
				<% if current_user.is_at_admin_level? %><%= link_to "View All Deal Extra Services", deal_extra_services_path %><% end %>
      </div>
      <div class='title'>
        <span id='title'>Update Deal Extra Service</span>
      </div>
			<div class="small-6 large-centered columns">
				<%= form_for(@deal_extra_service) do |f| %><br/>
				<div><strong>Extra Service Id: </strong><span id="mandat">*</span><br />
				  <%= f.text_field :extra_service_id %></div>
				  <div><strong>Deal Id : </strong><br />
				  <%= f.text_field :deal_id %></div>
				  <div><strong>Price: </strong><span id="mandat">*</span><br />
				  <%= f.text_field :price %></div>
				  <div><strong>Status:</strong><span id="mandat">*</span><br />
				  <%= f.text_field :status %></div>
				  <div><strong>Service Term:</strong><br />
            	  <%= f.text_field :service_term %></div>
				  <div><%= f.check_box :status %><strong>Status</strong></div>
				  <div><%= f.submit "Update" %></div>
				<% end %>
			</div>
    </td>
	</tr>
</table>

 