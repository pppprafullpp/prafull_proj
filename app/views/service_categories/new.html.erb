<table cellpadding='0' cellspacing='0' class='tabbed' height='100%' width='100%' >
  <tr> 
    <td class='main' id='main' valign='top'>
      <div class='title_tools'>
		<%= link_to "View All Services", service_categories_path %>
      </div>
      <div class='title'>
        <span id='title'>Create a New Service</span>
      </div>

			<div class="small-6 large-centered columns">
				<%= form_for(@service_category, :url => @service_categories) do |f| %>
					<br/>

				  <div>Name of service : <br />
				  <%= f.text_field :name %></div>
				  <div><%= f.submit "Create" %></div>
				<% end %>
			</div>
    </td>
	</tr>
</table>

