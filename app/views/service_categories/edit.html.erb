<table cellpadding='0' cellspacing='0' class='tabbed' height='100%' width='100%' >
  <tr> 
    <td class='main' id='main' valign='top'>

      <div class='title_tools'>
				<% if current_user.is_at_admin_level? %><%= link_to "View All Services", service_categories_path %><% end %>
      </div>
      <div class='title'>
        <span id='title'>Update Service</span>
      </div>
			<div class="small-6 large-centered columns">
				<%= form_for(@service_category) do |f| %><br/>
					<div>Service Category Name :<span id="mandat">*</span> <br /><%= f.text_field :name %></div>
					<div>Description : <br /><%= f.text_area :description %></div>
				  <div><%= f.submit "Update" %></div>
				<% end %>
			</div>
    </td>
	</tr>
</table>

