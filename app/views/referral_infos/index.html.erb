<table cellpadding='0' cellspacing='0' class='tabbed' height='100%' width='100%'>
	<tr>
		<td class='main' id='main' valign='top'>
			<div class='title_tools'>
				<% if current_user.is_super_admin? %>
					<%#= link_to "Create New App User", new_app_user_path%>
				<% end %>
			</div>
			<div class='title'>
				<span id='title'><%= image_tag("users_active.png")%>App Users</span>
			</div>
			<div id="users" class="list">
				<table id="users_list" class="datatable" cellpadding='0' cellspacing='0' border='1'>
					<thead>
						<tr>
							<th><strong>ID</strong></th>
							<th><strong>Referring User</strong></th>
							<th><strong>Referred User</strong></th>
							<th><strong>Event Performed</strong></th>
							<th><strong>Referring User Coins </strong></th>
							<th><strong>Referred User Coins</strong></th>
						</tr>
					</thead>
					<tbody>
						<% @referral_infos.each do |r_info| %>
							<%# if can? :read, app_user %>
								<tr>
									<td><%= r_info.id %></td>
									<td><%= r_info.first_referring_identity %></td>
									<td><%= r_info.referred_user %></td>
									<td><%= r_info.event %></td>
									<td><%= r_info.referring_user_coins %></td>
									<td><%= r_info.referred_user_coins %></td>
								</tr>
							<%# end %>
						<% end %>
					</tbody>
				</table>
			</div>
		</td>
	</tr>
</table>