<table cellpadding='0' cellspacing='0' class='tabbed' height='100%' width='100%' >
  <tr> 
    <td class='main' id='main' valign='top'>

      <div class='title_tools'>
				<%= link_to "View All Users", users_path%>				
      </div>
      <div class='title'>
        <span id='title'>Change password</span>
      </div>
			
			<% if @current_user == @user%>
		  	<p class="alert">
					Attention Please:
					You will be logged off after updating your own password.<br/>
					Please sign in again with your newly updated password.<br/>
				</p>
			<% end %>
			
			<div class="small-6 large-centered columns">
			  <p>	<strong>User ID</strong>: 
			  <%= @user.id %></p>
			  <p>	<strong>User Email</strong>: 
			  <%= @user.email %></p>
				<%= form_for(@user, :url => update_password_user_path(@user), :html => { :method => :put }) do |f| %>
				  <div><%= f.label :password, "New password" %><br />
				  <%= f.password_field :password %></div>

				  <div><%= f.label :password_confirmation, "Confirm new password" %><br />
				  <%= f.password_field :password_confirmation %></div><br/><br/>

				  <div><%= f.submit "Change my password", :confirm => 'Are you sure?' %></div>
				<% end %>
			</div>
    </td>
	</tr>
</table>

