	<div class= 'col-md-4 no-padding'>
	<label for="Name" class="control-label">Select State</label>
    <% cities_array = Statelist.all.pluck(:state).uniq.map { |city| city } %>
    <%= select_tag(:state,options_for_select(cities_array,p_state),:class => 'form-control',:prompt => 'Select State',:name=>"primary_state", :id=>id) %>
</div>
    <script>
    $(document).ready(function(e) {
    	var p_state;
    	var s_state;
    	$("#primary_state").change(function(e){
    		p_state	 = $('#primary_state').val();
    		});
    		var primary_number = 	$('#primary_id_number1').val();
    		var primary_id_number = p_state  + "==="  + primary_number
    		$("#primary_id_number").val(primary_id_number);

    	secondary_name = $('#secondary_id').val();
    		if(secondary_name == "Driver License"){
    			$('#secondary_id_information').hide();
    			$('#d_license').show();
    		}
    		else{
    			$('#d_license').hide();
    				$('#secondary_id_information').show();
    		}


    		primary_name = $('#primary_id').val();
    		if(primary_name == "Driver License"){
    			$('#primary_id_information').hide();
    			$('#primary_d_license').show();
    		}
    		else{
    			$('#primary_d_license').hide();
    				$('#primary_id_information').show();
    		}


    	$("#secondary_state").change(function(e){
    		s_state	 = $('#secondary_state').val();
    		var secondary_number = 	$('#secondary_id_number1').val();
    		var secondary_id_number = s_state  + "==="  + secondary_number
    		$("#secondary_id_number").val(secondary_id_number);
    		});

    	$("#secondary_id").change(function(e){
    		secondary_name = $('#secondary_id').val();
    		if(secondary_name == "Driver License"){
    			$('#secondary_id_information').hide();
    			$('#d_license').show();
    		}
    		else{
    			$('#d_license').hide();
    				$('#secondary_id_information').show();
    		}
    		});
    	$("#primary_id").change(function(e){
    		primary_name = $('#primary_id').val();
    		if(primary_name == "Driver License"){
    			$('#primary_id_information').hide();
    			$('#primary_d_license').show();
    		}
    		else{
    			$('#primary_d_license').hide();
    				$('#primary_id_information').show();
    		}
    		});
		});



    </script>
