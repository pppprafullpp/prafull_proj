<table cellpadding='0' cellspacing='0' class='tabbed' height='100%' width='100%' >
  <tr> 
    <td class='main' id='main' valign='top'>

      <div class='title_tools'>
				<% if current_user.is_at_admin_level? %><%= link_to "View All Orders", orders_path %><% end %>
      </div>
      <div class='title'>
        <span id='title'>Update Order</span>
      </div>
			<div class="small-6 large-centered columns">
				<%= form_for(@order) do |f| %>
				<br/>
					<% if @order.errors.any? %>
  					<div id="error_explanation">
    					<div class="alert alert-danger">
      					The form contains <%= pluralize(@order.errors.count, "error") %>.
    					</div>
    					<ul>
    						<% @order.errors.full_messages.each do |msg| %>
      						<li><%= msg %></li>
    						<% end %>
    					</ul>
  					</div>
					<% end %>
				  <br/>
				<div><strong>Deal Id : </strong><span id="mandat">*</span><br />
				  <%= f.text_field :deal_id, :readonly => true %></div>
				  <div><strong>App User Id : </strong><span id="mandat">*</span><br />
				  <%= f.text_field :app_user_id, :readonly => true %></div>
				  <div><strong>Effective Price : </strong><span id="mandat">*</span><br />
				  <%= f.text_field :effective_price %></div>
				  <div><strong>Deal Price:</strong><span id="mandat">*</span><br />
				  <%= f.text_field :deal_price %></div>
				  <div><strong>Status:</strong><span id="mandat">*</span><br />
				  <%= f.text_field :status %></div>
				  <div><strong>Activation Date</strong><span id="mandat">*</span><br />
				  <%= f.text_field :activation_date %></div>
				  <div><%= f.submit "Update" %></div>
				<% end %>
			</div>
    </td>
	</tr>
</table>

