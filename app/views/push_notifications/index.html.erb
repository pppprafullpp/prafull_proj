<table cellpadding='0' cellspacing='0' class='tabbed' height='100%' width='100%'>
  <tr> 
    <td class='main' id='main' valign='top'>
      <div class='title_tools'>
	    	<% if current_user.is_super_admin? %>
		  		<%= link_to "Create New", new_push_notification_path %>
				<% end %>
      </div>

      <div class='title'>
        <span id='title'><%= image_tag("services.png")%> Push Notifications</span>
      </div>

      <div id="service_category" class="list">
	    	<table id="push_notification_list" class="datatable" cellpadding='0' cellspacing='0' border='1'>
		  		<thead>
		    		<tr>
		      		<th><strong>ID</strong></th>
			  			<th><strong>App User Id </strong></th>
			  			<th><strong>Message </strong></th>
			  			<th><strong>Edit </strong></th>
						</tr>
		  		</thead>
		  		<tbody>
		  			<% @p_notifications.each do |p_notification| %>
			  			<% if can? :read, p_notification %>
			    			<tr>
			      			<td><%= p_notification.id %></td>
				  				<td><%= p_notification.app_user_id %></td>
				  				<td><%= p_notification.message %></td>
				  				<td><%= (link_to 'Edit', edit_push_notification_path(p_notification)) if can? :manage, p_notification %> | <%= (link_to "Delete", p_notification, method: :delete, data: { confirm: "You sure?" }) if can? :manage, p_notification %></td>
								</tr>
			  			<% end %>
						<% end %>
		  		</tbody>
				</table>
	  	</div>
    </td>
  </tr>
</table>