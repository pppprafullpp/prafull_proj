<table cellpadding='0' cellspacing='0' class='tabbed' height='100%' width='100%'>
  <tr> 
    <td class='main' id='main' valign='top'>
      <div class='title_tools'>
	    	<% if current_user.is_super_admin? %>
		  		<%#= link_to "Create New Service Category", new_service_category_path %>
				<% end %>
      </div>

      <div class='title'>
        <span id='title'><%= image_tag("ratings.png")%> Ratings</span>
      </div>

      <div id="comment" class="list">
	    <table id="comment_list" class="datatable" cellpadding='0' cellspacing='0' border='1'>
		  <thead>
		    <tr>
		      <th><strong>App User ID</strong></th>
			  	<th><strong>Deal ID </strong></th>
			  	<th><strong>Rating</strong></th>
			  	<th><strong>Edit </strong></th>
				</tr>
		  </thead>
		  <tbody>
		    <% @ratings.each do |rating| %>
			  	<% if can? :read, rating %>
			    	<tr>
			      	<td><%= rating.app_user_id %></td>
				  		<td><%= rating.deal_id %></td>
				  		<td><%= rating.rating_point %></td>
				  		<td><%= (link_to 'Edit', edit_rating_path(rating)) if can? :manage, rating %> | <%= (link_to "Delete", rating, method: :delete, data: { confirm: "You sure?" }) if can? :manage, rating %></td>
						</tr>
			  	<% end %>
				<% end %>
		  </tbody>
		</table>
	  </div>
    </td>
  </tr>
</table>
