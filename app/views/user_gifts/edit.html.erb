<table cellpadding='0' cellspacing='0' class='tabbed' height='100%' width='100%' >
  <tr> 
    <td class='main' id='main' valign='top'>

      <div class='title_tools'>
				<% if current_user.is_at_admin_level? %><%= link_to "View All UIser Gifts", user_gifts_path %><% end %>
      </div>
      <div class='title'>
        <span id='title'>Update User Gift</span>
      </div>
			<div class="small-6 large-centered columns">
				<%= form_for(@user_gift) do |f| %><br/>
				<div><strong>App User ID: </strong><span id="mandat">*</span><br />
				  <%= f.text_field :app_user_id%></div>
				  <div><strong>Gift ID : </strong><br />
				  <%= f.text_field :gift_id %></div>
				  <div><strong>Order ID: </strong><span id="mandat">*</span><br />
				  <%= f.text_field :order_id %></div>
				  <div><%= f.check_box :status %><strong>Status</strong></div>
				  <div><%= f.submit "Update" %></div>
				<% end %>
			</div>
    </td>
	</tr>
</table>